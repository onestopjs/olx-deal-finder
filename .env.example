# =============================================================================
# REQUIRED ENVIRONMENT VARIABLES
# =============================================================================

# LLM Provider Configuration
# Choose one of: ollama, openai, anthropic
LLM_PROVIDER=ollama

# =============================================================================
# PROVIDER-SPECIFIC REQUIRED VARIABLES
# =============================================================================
# Set these based on your chosen LLM_PROVIDER

# For LLM_PROVIDER=ollama
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

# For LLM_PROVIDER=openai
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_URL=https://api.openai.com/v1  # Optional, defaults to OpenAI's API

# For LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# OPTIONAL ENVIRONMENT VARIABLES
# =============================================================================
# These variables have defaults and are not required

# Enable if your model supports tool calling
TOOL_CALLING_ENABLED=false

# Scoring Configuration
RELEVANCY_SCORE_WEIGHT=1
PRICE_SCORE_WEIGHT=1
RELEVANCY_GAMMA=1.5

# Search Configuration
MAX_PAGES_TO_SEARCH=20
LISTINGS_BATCH_SIZE=20

# Response Configuration
ENABLE_MARKDOWN=true

# Debugging
DEBUG_SCORING=false

# Logging
LOG_LEVEL=INFO

